<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.gdut.mapper.TbUserMapper">
    <!--注册普通用户-->
    <insert id="addUser" parameterType="net.gdut.bean.TbUser">
        insert into tb_user (uname,password,authority) values (#{uname},#{password},'user')
    </insert>
    <!--注册管理员-->
    <insert id="addAdmin" parameterType="net.gdut.bean.TbUser">
        insert into tb_user (uname,password,authority) values (#{uname},#{password},'admin')
    </insert>
    <select id="getUser" parameterType="String" resultType="net.gdut.bean.TbUser">
        select * from tb_user where uname = #{uname};
    </select>

    <select id="showOrder" resultType="net.gdut.bean.TbBook">
-- 多表查询 已知uid查所有订单？通过bno合并还是全部订单展示
        select (ono,uno,bno) user from tb_book tb_order
    </select>

    <select id="getRole" parameterType="String" resultType="String">
        select authority from tb_user where uname = #{uname}
    </select>
</mapper>