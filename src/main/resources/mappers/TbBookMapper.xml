<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.gdut.mapper.TbBookMapper">



    <insert id="addBook" parameterType="net.gdut.bean.TbBook">
    insert into tb_book (bname,author,cover,price,description) values (#{bname},#{author},#{cover},#{price},#{description})
    </insert>

    <insert id="deleteBook" parameterType="String">
    delete from tb_book where bname = #{bname}
    </insert>

</mapper>